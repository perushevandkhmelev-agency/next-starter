{
  "name": "next-starter",
  "version": "1.0.0",
  "repository": "git@github.com:perushevandkhmelev-agency/next-starter.git",
  "author": "Perushev & Khmelev",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "NODE_ENV=production next start",
    "deploy": "./node_modules/.bin/pm2 deploy ecosystem.json production",
    "deploy:setup": "./node_modules/.bin/pm2 deploy ecosystem.json production setup",
    "icons:edit": "gulp icons-edit",
    "icons:save": "gulp icons-save",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "lint:styles": "stylelint './**/*.{js,jsx,ts,tsx}'",
    "apollo:types": "apollo client:download-schema && apollo codegen:generate --target=typescript && node utils/generatePossibleTypes.js"
  },
  "config": {
    "iconsServer": "https://fontello.com",
    "iconsConfig": "assets/fonts/icon/config.json",
    "iconsLocation": [
      "assets/fonts/icon"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.6.8",
    "deepmerge": "^4.2.2",
    "graphql": "^16.5.0",
    "isomorphic-unfetch": "^3.1.0",
    "lodash": "^4.17.21",
    "next": "^12.1.6",
    "next-compose-plugins": "^2.2.1",
    "next-fonts": "^1.5.1",
    "next-images": "^1.8.4",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "polished": "^4.2.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "^6.1.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@types/graphql": "^14.5.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.40",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-helmet": "^6.1.0",
    "@types/styled-components": "^5.1.25",
    "apollo": "^2.34.0",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "pm2": "^5.2.0",
    "prettier": "^2.7.0",
    "stylelint": "^13.13.1",
    "stylelint-config-pk-standard": "^1.0.5",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.7.3"
  }
