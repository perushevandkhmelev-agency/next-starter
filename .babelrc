{
  "presets": [
    ["next/babel",
      {
        "preset-env": { "corejs": 3, "useBuiltIns": "entry" },
        "styled-jsx": { "optimizeForSpeed": true, "sourceMaps": false }
      }
    ]
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose" : true }],
    ["module-resolver", { "root": ["./"] }],
    ["lodash"]
  ],
  "env": {
    "development": {
      "plugins": [
        [
          "styled-components",
          {
            "displayName": true,
            "ssr": true
          }
        ]
      ]
    },
    "production": {
      "plugins": [
        ["graphql-tag"],
        [
          "styled-components",
          {
            "displayName": false,
            "ssr": true
          }
        ]
      ]
    }
  }
}
